{
  "name": "@stone-js/core",
  "version": "0.0.31",
  "description": "Stone.js core",
  "author": "Mr. Stone <evensstone@gmail.com>",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/stonemjs/core.git"
  },
  "homepage": "https://github.com/stonemjs/core#readme",
  "bugs": {
    "url": "https://github.com/stonemjs/core/issues"
  },
  "keywords": [
    "Core",
    "Factory",
    "Stone.js"
  ],
  "files": [
    "/dist"
  ],
  "type": "module",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "lint": "ts-standard src",
    "lint:fix": "ts-standard --fix src tests",
    "predoc": "rimraf docs",
    "doc": "typedoc",
    "prebuild": "rimraf dist && npm run doc",
    "build": "rollup -c",
    "test": "vitest run",
    "test:cvg": "npm run test -- --coverage",
    "test:text": "npm run test:cvg -- --coverage.reporter=text",
    "test:html": "npm run test:cvg -- --coverage.reporter=html",
    "test:clover": "npm run test:cvg -- --coverage.reporter=clover",
    "prepare": "husky"
  },
  "dependencies": {
    "@stone-js/config": "^0.0.33",
    "@stone-js/pipeline": "^0.0.45",
    "@stone-js/service-container": "^0.0.43",
    "deepmerge": "^4.3.1",
    "lodash-es": "^4.17.21"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-multi-entry": "^6.0.1",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^12.1.1",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^22.9.0",
    "@vitest/coverage-v8": "^2.1.4",
    "husky": "^9.1.6",
    "rimraf": "^5.0.5",
    "rollup": "^4.1.5",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-delete": "^2.1.0",
    "rollup-plugin-dts": "^6.1.1",
    "rollup-plugin-node-externals": "^6.1.2",
    "rollup-plugin-polyfill-node": "^0.13.0",
    "ts-standard": "^12.0.2",
    "tslib": "^2.8.1",
    "typedoc": "^0.26.11",
    "typedoc-plugin-markdown": "^4.2.10",
    "typescript": "^5.6.3",
    "vitest": "^2.1.4"
  },
  "ts-standard": {
    "globals": [
      "it",
      "expect",
      "describe",
      "beforeEach"
    ]
  }
}
